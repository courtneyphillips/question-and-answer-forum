<h1 class="title">New Question</h1>
<form>
  <div class="form-group">
    <label for="title">Question</label>
    {{input value=title id="title" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="body">Description</label>
    {{textarea value=description id="description" class="form-control" rows="6"}}
  </div>
  <button class="btn btn-primary btn-block" {{action 'save'}}>Save</button>
</form>
