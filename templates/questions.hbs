<div class="container">
  <h1>All Questions</h1>
  <hr>
  {{#if model}}
      {{#each question in model}}
      <div class="round-box">
        <h3 class="intro">{{#link-to 'question' question}}{{question.title}}{{/link-to}}</h3>
         <span class="intro">&mdash; {{question.author}}</span>
      </div>
      {{/each}}
    {{else}}
    <div class="round-box">
      <h1>
        <span class="glyphicon glyphicon-alert" aria-hidden="true"></span>
      </h1>
      <h4>
        It looks like there aren't any questions yet! Try adding one below.
      </h4>
    </div>
  {{/if}}
  <br>
  {{#link-to 'new-question' classNames="btn btn-default btn-block"}}<span class="glyphicon glyphicon-pencil" aria-hidden="true">&nbsp;</span>New Question{{/link-to}}
</div>
